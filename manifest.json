{
  "name": "Graphy",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "An extension substracts the main content of the page",
  "homepage_url": "https://github.com/hydro-c/graphy",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["bg.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Read via Graphy"
  },
  "permissions": [
    "background",
    "tabs",
    "https://*/*",
    "http://*/*"
  ]
}